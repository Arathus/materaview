<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MateraView">

        <attr name="materaStyle" format="enum">
            <enum name="chaotic" value="0" />
            <enum name="frame_strict" value="1" />
            <enum name="frame_chaotic" value="2" />
            <enum name="frame_regular" value="3" />
            <enum name="integral_equal" value="4" />
            <enum name="integral_strict" value="5" />
        </attr>

        <attr name="elementSizes" format="enum">
            <enum name="undersized" value="-1" />
            <enum name="normal" value="0" />
            <enum name="oversized" value="1" />
        </attr>

        <attr name="numberOfLayers" format="integer" />
        <attr name="dropShadowSize" format="integer" />
        <attr name="elementColor" format="color" />
        <attr name="inverseColors" format="boolean" />
        <attr name="blackFilter" format="boolean" />
        <attr name="filterValue" format="integer" />
        <attr name="shadeOfColor" format="integer" />
        <attr name="backgroundColor" format="color" />

        <attr name="firstCornerToDraw" format="enum">
            <enum name="TOP_LEFT" value="0" />
            <enum name="TOP_RIGHT" value="1" />
            <enum name="BOTTOM_RIGHT" value="2" />
            <enum name="BOTTOM_LEFT" value="3" />
        </attr>

        <attr name="secondCornerToDraw" format="enum">
            <enum name="TOP_LEFT" value="0" />
            <enum name="TOP_RIGHT" value="1" />
            <enum name="BOTTOM_RIGHT" value="2" />
            <enum name="BOTTOM_LEFT" value="3" />
        </attr>

        <attr name="thirdCornerToDraw" format="enum">
            <enum name="TOP_LEFT" value="0" />
            <enum name="TOP_RIGHT" value="1" />
            <enum name="BOTTOM_RIGHT" value="2" />
            <enum name="BOTTOM_LEFT" value="3" />
        </attr>

        <attr name="fourthCornerToDraw" format="enum">
            <enum name="TOP_LEFT" value="0" />
            <enum name="TOP_RIGHT" value="1" />
            <enum name="BOTTOM_RIGHT" value="2" />
            <enum name="BOTTOM_LEFT" value="3" />
        </attr>


    </declare-styleable>
</resources>